<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <form onsubmit="post" action="/adduser">
      <div class="form-group">
        <label for="exampleInputEmail1">First Name</label>
        <input type="first" class="form-control" id="first" aria-describedby="emailHelp" placeholder="Enter First Name">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Last Name</label>
        <input type="last" class="form-control" id="last" placeholder="Enter Last Name" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Gender</label>
        <select class="form-control" id="gender">
          <option>Male</option>
          <option>Female</option>
          <option>Other</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Age</label>
        <select class="form-control" id="age">
          <% for (var i = 18; i <= 60; i++) { %>
            <option value="<%= i %>"><%= i %></option>
        <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Franchise Location (Full Address)</label>
        <input type="location" class="form-control" id="location" aria-describedby="emailHelp" placeholder="Enter Full Address">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Drinks Ordered</label>
        <select class="form-control" id="drinks">
          <% for (var i = 0; i <= 60; i++) { %>
            <option value="<%= i %>"><%= i %></option>
        <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Amount Spent</label>
        <select class="form-control" id="age">
          <% for (var i = 0; i <= 150; i++) { %>
            <option value="<%= i %>">$<%= i %></option>
        <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">A Member?</label>
        <select class="form-control" id="member">
          <option>Yes</option>
          <option>No</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Gender</th>
          <th scope="col">Age</th>
          <th scope="col">Location</th>
          <th scope="col">Drink Ordered</th>
          <th scope="col">Amount Spent</th>
          <th scope="col">Memeber</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% for (u of user) { %>
            <td><%= u.first %></td>
            <td><%= u.last %></td>
            <td><%= u.gender %></td>
            <td><%= u.age %></td>
            <td><%= u.location %></td>
            <td><%= u.drink %></td>
            <td><%= u.amount %></td>
            <td><%= u.member %></td>
          <% } %>
        </tr>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
